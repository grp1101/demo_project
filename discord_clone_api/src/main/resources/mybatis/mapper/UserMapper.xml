<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">

    <!-- 회원가입 저장 -->
    <insert id="insertUser" parameterType="UserVo">
        INSERT INTO user
            (id, username, email, password, address, phone, website, company, reg_date)
        VALUES
            (#{id}, #{username}, #{email}, #{password}, #{address}, #{phone} , #{website}, #{company},current_timestamp)
    </insert>


    <!-- 개인정보 가져오기 -->
    <select id="getUserByEmail" resultType="CustomUserDetails">
        SELECT *
        FROM User
        WHERE email = #{email}
    </select>

    <!-- User 테이블 가져오기 -->
    <select id="getUserList" resultType="UserVo">
        SELECT *
        FROM User
    </select>

    <!-- 토큰에 저장된 객체 인증값으로 유저 정보 가져오기 -->
    <select id="getUserByEmailInUservo" resultType="UserVo">
        SELECT *
        FROM User
        WHERE email = #{email}
    </select>

</mapper>